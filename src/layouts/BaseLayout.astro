---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const {
    title = "Stratton Digital Systems",
    description = "Performance-focused websites for service businesses.",
    pageClass = "",
} = Astro.props;
---

<!doctype html>
<html lang="en">
    <script type="application/ld+json">
        {
            "@context": "https://schema.org",
            "@type": "ProfessionalService",
            "name": "Stratton Digital Systems",
            "url": "https://strattondigitalsystems.com",
            "description": "Website design and development for service businesses. Platform builds, custom builds, and ongoing website management.",
            "areaServed": {
                "@type": "Country",
                "name": "United States"
            }
        }
    </script>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Canonical -->
    <link rel="canonical" href={Astro.url.href} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url.href} />

    <!-- Optional but safe -->
    <meta name="robots" content="index, follow" />

    <body class={pageClass}>
        <Header />
        <main>
            <slot />
        </main>
        <Footer />
    </body>
</html>
